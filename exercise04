arg_1 = int(input("Введите целое положительное число: "))
if arg_1 <= 0:
    print("Вы ввели отрицательное число")
    exit()

arg_2 = int(input("Введите целое отрицательное число: "))
if arg_2 >= 0:
    print("Вы ввели положительное число")
    exit()

def my_func(x,y):
    v2 = 1
    i = 1
    while i <= abs(y):
        v2 *= x
        i += 1

    return 1 / v2

print(my_func(arg_1, arg_2))
